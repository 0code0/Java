<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/pimds?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.show_sql">true</property>
    <mapping class="BusinessObject.Comment"/>
    <mapping class="BusinessObject.Document"/>
    <mapping class="BusinessObject.DocumentCategory"/>
    <mapping class="BusinessObject.EmployeeType"/>
    <mapping class="BusinessObject.ProjectAllocation"/>
    <mapping class="BusinessObject.ProjectCategory"/>
    <mapping class="BusinessObject.ProjectClass"/>
    <mapping class="BusinessObject.ProjectDetail"/>
    <mapping class="BusinessObject.ProjectDocument"/>
    <mapping class="BusinessObject.User"/>
  </session-factory>
</hibernate-configuration>
